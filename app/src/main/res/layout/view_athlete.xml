<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mo5"
    android:background="@color/athleteItemColor"
    android:elevation="@dimen/mo10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAthleteImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/mo5"
        android:layout_marginRight="@dimen/mo5"
        android:scaleType="fitXY"
        android:src="@mipmap/place_holder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            style="@style/Text1Title" />

        <TextView
            android:id="@+id/tvBrief"
            style="@style/LimitedText1Brief" />
    </LinearLayout>
</LinearLayout>